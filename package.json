{
  "name": "react-parcel-boilerplate",
  "version": "1.0.0",
  "description": "React Parcel Boilerplate",
  "author": "Matt Lockyer",
  "license": "ISC",
  "dependencies": {
    "parcel": "^2.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.0.1",
    "eslint": "^7.14.0",
    "rimraf": "^3.0.2"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "scripts": {
    "prebuild": "yarn clean",
    "build": "parcel build src/index.html --no-source-maps",
    "clean": "rimraf ./dist",
    "fix": "eslint src/ --fix",
    "start": "parcel src/index.html --open"
  }
}
